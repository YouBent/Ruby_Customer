<h1>Customer List</h1>
 
<%= link_to 'New user', new_user_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Phone_Number</th>
    <th>Email</th>
    <th>Dob</th>
    <th>Address</th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.phone_number %></td>
	  <td><%= user.email %></td>
	  <td><%= user.dob %></td>
	  <td><%= user.address %></td>
	  <td><%= link_to 'Show', user_path(user) %></td>
	  <td><%= link_to 'Edit', edit_user_path(user) %></td>
	  <td><%= link_to 'Delete', user_path(user),
	                     method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

